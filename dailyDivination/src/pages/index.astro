---
import Header from "../components/Header.astro"
import "../styles/main.css"
import HoroscopePage from "../components/HoroscopePage.astro"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Daily Divination</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		<!--Load fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa:wght@400;700&family=Katibeh&family=Oswald:wght@200..700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
	</head>
<body>
	<Header/>
	<p class="tagline"> Dive into the cosmic energies and uncover the wisdom you need to navigate life with clarity and purpose. </p>
	<HoroscopePage/>

	<div class="container-fluid tarotSection">
		<div class="container">
			<h3>Tarot Reading</h3>
			<div class="row">
				<div class="col col-lg-2">
					<button type="button" class="tarotBtn">Today's Card</button>
				</div>
				<div class="col col-lg-3">
					<button type="button" class="tarotBtn">Three Card Reading</button>
				</div>
			</div>
		</div>
		<div class="tarotResults">
			
		</div>
	</div>	
</body>
</html>