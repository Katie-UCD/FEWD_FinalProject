    font-size: 2rem; 
}

.nav-item {
    text-align: center;
}

.nav-link {
    font-family: "Katibeh", serif;
    color: var(--cream);
    font-weight: bold;
}
.logo {
    color: var(--brown);
    font-size: 3rem; 
}

