<!-- Header start -->
<div class="container text-center header">
    <div class="row">
        <div class="col align-self-center">
			<img id="moonImage" src="" alt="Current Moon Phase" class="img-fluid" />
        </div>
        <div class="col align-self-center">
            <h1 id="moonPhaseName">Loading...</h1>
            <h2 id="dateDisplay">Loading...</h2>
